---
import Layout from '../layouts/Layout.astro';
import NavBarTop from '../components/NavBarTop.astro';
import LatestPostGrid from '../components/LatestPostGrid.astro';

// - Page
//     - SEO Wrapper
//     - Layout (contenedor)
//     - Header (contenido)
//         - navbar (contenido)
//         - Portada (contenido)
//         - Descripción y enlaces a redes sociales (contenido)
//         - Proyecto y empresa actual (contenido)
//     - Main (contenido)
//         - Tarjetas de últimos artículos (contenido)
//     - Footer (contenido)
//         - Texto legal (contenido)

---
<Layout theme="dark" title="Inicio | Alejandro Carrasco Rodríguez">

	<NavBarTop theme="dark" />

	<header class="container px-3 px-md-5">

		<section class="bg-black text-light rounded-4 mb-5">
			<div class="d-flex flex-column align-items-center py-5">
				<h1>Alejandro Carrasco Rodríguez</h1>
				<span class="d-block h4">Desarrollador web</span>
			</div>
		</section>

	</header>

	<main class="container">
		<LatestPostGrid src="http://www.alejandrocr.co/data/posts.json" />
	</main>

	<footer class="container">
	</footer>

	<Fragment slot="styles">
		<style>
		body {
			background-image: url('https://picsum.photos/1600/1000');
		}
	</style>
	</Fragment>

	<Fragment slot="scripts">
	</Fragment>

</Layout>