---
import { Card, ImageContent, Post } from '../models/posts';

interface Props {
  post: Post;
}

const post = Astro.props.post;

const image = post.image;

---
<a href=`/blog/${post.category}/${post.slug}`>
  <div class="card overflow-hidden flex-row w-100 h-100 p-1">
    <img class="card-img-top" src=`${ image?.url }` alt=`${ image?.alt }`>
    <div class="card-body">
      <h5 class="card-title text-primary">{ post.title }</h5>
      <p class="card-text">{ post.summary }</p>
    </div>
  </div>
</a>

<style>
.card {
  border: unset;
}
.card:hover {
  transform: scale(1.05);
  box-shadow: 0 0 10px 0 rgba(0, 0, 0.5, 0.5);
  transition: transform 0.3s ease-in-out;
}
</style>